<!DOCTYPE html>
<html>
<head>
  <title>CrBackend</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
  </div>
  
  <%= yield :top_content %>

  <div class="container">
    <h1><%= yield :header %></h1>
    <%= yield %>
  </div>

</body>
</html>
